<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.sys.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.itcast.sys.pojo.User">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="loginname" property="loginname" />
        <result column="address" property="address" />
        <result column="sex" property="sex" />
        <result column="remark" property="remark" />
        <result column="pwd" property="pwd" />
        <result column="deptid" property="deptid" />
        <result column="hiredate" property="hiredate" />
        <result column="mgr" property="mgr" />
        <result column="available" property="available" />
        <result column="ordernum" property="ordernum" />
        <result column="type" property="type" />
        <result column="imgpath" property="imgpath" />
        <result column="salt" property="salt" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, loginname, address, sex, remark, pwd, deptid, hiredate, mgr, available, ordernum, type, imgpath, salt
    </sql>
    
    <!-- //删除sys_role_user 中间表的数据
	void deleteUserRoleByUid(Serializable id); -->

    <delete id="deleteUserRoleByUid">
        delete from sys_role_user where uid = #{uid}
    </delete>
</mapper>
